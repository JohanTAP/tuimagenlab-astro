---
const services = [
  { name: "Escaneamos", icon: "🖥️" },
  { name: "Diseñamos", icon: "✏️" },
  { name: "Fresamos o Imprimimos", icon: "🖨️" },
  { name: "Maquillamos", icon: "🎨" },
  { name: "Entregamos", icon: "📦" },
];
---
<div id="services" class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Nuestros servicios</h2>
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        ¿Qué hacemos?
      </p>
    </div>
    <div class="mt-10">
      <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
        {services.map((service) => (
          <div class="relative">
            <dt>
              <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
                <span class="text-2xl">{service.icon}</span>
              </div>
              <p class="ml-16 text-lg leading-6 font-medium text-gray-900">{service.name}</p>
            </dt>
          </div>
        ))}
      </dl>
    </div>
  </div>
</div>
